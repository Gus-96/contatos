<p id="notice"><%= notice %></p>

<h1>Lista de Contatos</h1>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
<%= link_to 'Novo Contato', new_pessoa_path , type:"button", class:"btn btn-primary" %>
</div>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>CPF</th>
      <th>Genero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.idade %></td>
        <td><%= pessoa.cpf %></td>
        <td><%= pessoa.genero.nome %></td>
        <td><%= link_to 'Detalhe', pessoa, type:"button", class:"btn btn-outline-info" %></td>
        <td><%= link_to 'Editar', edit_pessoa_path(pessoa), type:"button", class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Excluir', pessoa, method: :delete, data: { confirm: 'VocÃª tem certeza ?' }, type:"button", class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>