<p id="notice"><%= notice %></p>

<h1>Lista de Contatos</h1>
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
<%= link_to 'Novo Contato', new_pessoa_path , type:"button", class:"btn btn-primary" %>
</div>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>CPF</th>
      <th>Genero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.idade %></td>
        <td><%= pessoa.cpf %></td>
        <td><%= pessoa.genero.nome %></td>
        <td><%= link_to '', pessoa, class:"bi bi-search" %></td>
        <td><%= link_to '', edit_pessoa_path(pessoa), class:"bi bi-pencil-square" %></td>
        <td><%= link_to '', pessoa, method: :delete, data: { confirm: 'VocÃª tem certeza ?' }, class:"bi bi-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>